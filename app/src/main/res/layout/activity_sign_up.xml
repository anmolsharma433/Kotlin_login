<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F1F1"
    tools:context=".SignUp">

    <EditText
        android:id="@+id/etruname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="103dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="95dp"
        android:backgroundTint="#CD4B4545"
        android:ems="10"
        android:hint="Enter Your Username"
        android:inputType="textPersonName"
        android:textColor="#CD4B4545"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etrpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="86dp"
        android:backgroundTint="#CD4B4545"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#CD4B4545"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etruname" />

    <EditText
        android:id="@+id/etrcpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="111dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="87dp"
        android:backgroundTint="#CD4B4545"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#CD4B4545"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etrpwd" />

    <Button
        android:id="@+id/btnSignUppage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="167dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="156dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etrcpwd" />

</androidx.constraintlayout.widget.ConstraintLayout>